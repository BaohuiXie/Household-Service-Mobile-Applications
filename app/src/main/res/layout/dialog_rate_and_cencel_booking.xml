<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/text_view_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36dp"
            android:textColor="@color/white"
            android:text="How was Service?" />

        <Spinner
            android:id="@+id/spinner_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background" />

        <EditText
            android:id="@+id/editTextComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Comment Here"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background" />/>

        <Button
            android:id="@+id/cancel_booking"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_cancel_black_24dp"
            android:text="cancel"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/rate"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp"
            android:text="rate"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/go_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp"
            android:text="go back"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>